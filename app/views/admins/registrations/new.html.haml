= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  .control-group
    = f.label :email
    = f.email_field :email, class: "login-field", placeholder: "Enter your email"
    %span.login-field-icon.fui-man-16

  .control-group
    = f.label :password
    = f.password_field :password, class: "login-field", placeholder: "Password"
    %span.login-field-icon.fui-lock-16

  .control-group
    = f.label :password_confirmation
    = f.password_field :password_confirmation, class: "login-field", placeholder: "Confirm Password"
    %span.login-field-icon.fui-lock-16

  = f.submit "Sign up", class: "btn btn-primary btn-large btn-block"
