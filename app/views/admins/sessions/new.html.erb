<div class="row">
  <div class="span3">
    <div class="login-icon">
      <img src="/assets/login/icon.png" alt="Welcome to Mail App">
      <h4>Welcome to <small>Cuttlefish</small></h4>
    </div>
  </div>

  <div class="span6">
    <div class="login-form">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="control-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "login-field", placeholder: "Enter your email" %>
          <span class="login-field-icon fui-man-16"></span>
        </div>

        <div class="control-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "login-field", placeholder: "Password" %>
          <span class="login-field-icon fui-lock-16"></span>
        </div>

        <%= f.submit "Login", class: "btn btn-primary btn-large btn-block" %>
      <% end %>
      <%= render :partial => "devise/shared/links" %>
    </div>
  </div>
</div>