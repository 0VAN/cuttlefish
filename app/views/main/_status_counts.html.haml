%h3 Today
%table.table.table-condensed
  %tr
    %td Sent
    %td
      = link_to emails_path do
        %span.badge.pull-right= Email.stats_today[:total]
  %tr
    %td Delivered
    %td 
      = link_to emails_path(status: "delivered") do
        %span.badge.badge-success.pull-right= Email.stats_today[:delivered]
  %tr
    %td Soft bounces
    %td
      = link_to emails_path(status: "soft_bounce") do
        %span.badge.badge-warning.pull-right= Email.stats_today[:soft_bounce]
  %tr
    %td Hard bounces
    %td
      = link_to emails_path(status: "hard_bounce") do
        %span.badge.badge-important.pull-right= Email.stats_today[:hard_bounce]

