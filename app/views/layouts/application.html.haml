!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Cuttlefish"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    = favicon_link_tag 'cuttlefish.ico'
    = analytics_init if Rails.env.production?

  %body
    #wrap
      .container
        .row
          .span3.sidebar
            .brand
              = image_tag "cuttlefish_80x48.png", size: "80x48"
              .word
                Cuttlefish
            %form.form-search(accept-charset="UTF-8" action="#{deliveries_path}" method="get")
              .input-append
                = text_field_tag :search, @search, class: "span2 search-query", placeholder: "tomato@soup.com"
                = button_tag class: "btn" do
                  %i.fa.fa-search

            %ul.nav.nav-list
              %li.nav-header Explore
              = nav_menu_item_show_active dash_path do
                %i.fa.fa-dashboard.fa-fw
                Dashboard
              = nav_menu_item_show_active deliveries_path do
                %i.fa.fa-envelope.fa-fw
                Emails
              = nav_menu_item_show_active black_lists_path do
                %i.fa.fa-thumbs-down.fa-fw
                Blacklist
              = nav_menu_item_show_active documentation_path do
                %i.fa.fa-lightbulb-o.fa-fw
                Documentation
              %li.nav-header Test
              = nav_menu_item_show_active reputation_path do
                %i.fa.fa-heart.fa-fw
                Reputation
              = nav_menu_item_show_active new_test_email_path do
                %i.fa.fa-arrow-right.fa-fw
                Test email
              %li.nav-header Settings
              = nav_menu_item_show_active apps_path do
                %i.fa.fa-magic.fa-fw
                Apps
              = nav_menu_item_show_active admins_path do
                %i.fa.fa-group.fa-fw
                Administrators

            %hr
            %ul.nav.nav-list
              %li.nav-header
                = admin_gravatar(current_admin)
              %li= link_to "Edit my details", edit_admin_registration_path
              %li= link_to 'Logout', destroy_admin_session_path, method: :delete
            %hr
          .span9
            = bootstrap_flash
            = yield
      #push
    %footer
      .container
        .row
          .span6
            %h3 Say Hello
            %p
              Made by
              = link_to "@matthewlandauer", "https://twitter.com/matthewlandauer"
          .span6.text-right
            %h3 Cuttlefish is free and open source software
            %ul.unstyled
              %li
                = link_to "http://github.com/mlandauer/cuttlefish" do
                  Source code on Github
                  %i.fa.fa-github
              %li
                = link_to "https://github.com/mlandauer/cuttlefish/issues" do
                  Suggest a feature or report an issue
                  %i.fa.fa-bug
              %li
                = link_to "https://waffle.io/mlandauer/cuttlefish" do
                  waffle.io
                  %i.fa.fa-flag
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application", "data-turbolinks-track" => true
