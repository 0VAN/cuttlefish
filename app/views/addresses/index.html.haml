.page-header
  %h1 Addresses

.filter-wrap
  .btn-group
    = link_to "All", addresses_path, :class => ["btn", "btn-small", ("active" if @status.nil?)]
    = link_to "Sent from", addresses_path(status: "from"), :class => ["btn", "btn-small", ("active" if @status == "from")]
    = link_to "Sent to", addresses_path(status: "to"), :class => ["btn", "btn-small", ("active" if @status == "to")]

= paginated_section @addresses do
  %table.table.table-striped
    %thead
      %tr
        %th Email
        %th Last received
        %th Last sent
    %tbody(data-provides="rowlink")
      - @addresses.each do |address|
        %tr{class: bootstrap_status_class(address.status)}
          %td= link_to address.text, address
          %td
            - if address.time_last_received
              = time_ago_in_words(address.time_last_received)
              ago
          %td
            - if address.time_last_sent
              = time_ago_in_words(address.time_last_sent)
              ago
  
