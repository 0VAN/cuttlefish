.page-header
  %h3
    Emails sent from
    = @address.text

.row
  .span3
    %p
      = link_to to_address_path(@address) do
        Switch to emails sent
        %strong to
        this address
    = render "main/status_counts_period", stats: @address.deliveries_sent.group("deliveries.status").count

= render partial: "deliveries/to", locals: {deliveries: @deliveries}
