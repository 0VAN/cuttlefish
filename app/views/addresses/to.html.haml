.page-header
  %h1
    Emails sent to
    = @to

- if @deny_list
  %h2
    = @to
    is on the deny list
  %p
    - if @deny_list.caused_by_postfix_log_line
      Reason:
      = link_to truncate(@deny_list.caused_by_postfix_log_line.extended_status, length: 160), @deny_list.caused_by_delivery
      = time_ago_in_words(@deny_list.caused_by_postfix_log_line.created_at)
      ago
    - else
      We don't know why this was deny listed. The delivery that caused it may have been archived.

  - if policy(@deny_list).destroy?
    = button_to "Remove from deny list", @deny_list, method: :delete, class: "btn btn-danger"

.row
  .span3
    %p
      = link_to from_address_path(@to) do
        Switch to emails sent
        %strong from
        this address
    = render "main/status_counts_period", stats: @stats, link: false, loading: false

= render partial: "deliveries/from", locals: {deliveries: @deliveries}
